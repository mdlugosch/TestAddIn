<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Syncfusion="http://schemas.syncfusion.com/wpf" x:Class="TIS3_WPF_TestMusterAddIn.Views.EditView" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="700">
    <Grid>

        <Syncfusion:TabControlExt HorizontalAlignment="Left" VerticalAlignment="Top">
            <Syncfusion:TabItemExt  Header="Personaldaten" IsNewTab="False" MinWidth="150" MinHeight="20">
                <!-- Abfrage-View Personaldaten Hauptgriddefinition -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <!-- Spalte 0 Labels -->
                    <StackPanel Grid.Column="0" Margin="10 10 0 0">
                        <Label Content="Anrede / Titel" />
                        <Label Content="Vorname" Margin="0 10 0 0"/>
                        <Label Content="Nachname" Margin="0 10 0 0"/>
                        <Label Content="Firma" Height="50" Margin="0 10 0 0"/>
                        <Label Content="Strasse" Margin="0 10 0 0"/>
                        <Label Content="PLZ / Ort" Margin="0 10 0 0"/>
                        <Label Content="Telefon/ Fax" Margin="0 10 0 0"/>
                        <Label Content="Tel. Firma /Mobil" Margin="0 10 0 0"/>
                        <Label Content="EMail" Margin="0 10 0 0"/>
                        <Label Content="BLZ / Bank" Margin="0 10 0 0"/>
                        <Label Content="Konto" Margin="0 10 0 0"/>
                        <Label Content="Honorar je UE" Margin="0 10 0 0"/>
                        <Label Content="Bildungsträger" Margin="0 10 0 0"/>
                        <Label Content="Abteilung" Margin="0 10 0 0"/>
                        <Label Content="Team" Margin="0 10 0 0"/>
                    </StackPanel>
                    <!-- Spalte 1 Felder für Labels aus Spalte 0 -->
                    <StackPanel Grid.Column="1" Margin="10 10 10 0">
                        <!-- Stackpanel: Anrede/ Titel -->
                        <StackPanel Orientation="Horizontal">
                            <Syncfusion:ComboBoxAdv
                                Name="cbx_Personal_Anrede" Width="100" Margin="0 5 0 10"   
                                Syncfusion:SkinStorage.VisualStyle="Metro" />
                            <Syncfusion:ComboBoxAdv
                                Name="cbx_Personal_Titel" Width="100" Margin="10 5 0 10"   
                                Syncfusion:SkinStorage.VisualStyle="Metro" />
                        </StackPanel>

                        <TextBox Name="tbx_Personal_Vorname" Margin="0 5 0 0"
                             HorizontalAlignment="Left" Width="200" />
                        <TextBox Name="tbx_Personal_Nachname" Margin="0 15 0 0"
                             HorizontalAlignment="Left" Width="200" />
                        <TextBox Name="tbx_Personal_Firma" Margin="0 15 0 0"
                             HorizontalAlignment="Left" Height="50"  Width="200" />
                        <TextBox Name="tbx_Personal_Strasse" Margin="0 10 0 0"
                             HorizontalAlignment="Left" Width="200" />
                        <!-- Stackpanel: Plz / Ort -->
                        <StackPanel Orientation="Horizontal" Margin="0 15 10 0">
                            <TextBox Name="tbx_Personal_Plz" Margin="0 0 10 0"
                             HorizontalAlignment="Left" Width="50" />
                            <TextBox Name="tbx_Personal_Ort" Margin="0 0 10 0"
                             HorizontalAlignment="Left" Width="140" />
                        </StackPanel>
                        <!-- Stackpanel: Privattelefon/ Fax -->
                        <StackPanel Orientation="Horizontal" Margin="0 10 10 0">
                            <TextBox Name="tbx_Personal_PTel" Margin="0 0 10 0"
                             HorizontalAlignment="Left" Width="100" />
                            <TextBox Name="tbx_Personal_Fax" Margin="0 0 10 0"
                             HorizontalAlignment="Left" Width="100" />
                        </StackPanel>
                        <!-- Stackpanel: Firmentelefon / Mobiltelefon -->
                        <StackPanel Orientation="Horizontal" Margin="0 15 10 0">
                            <TextBox Name="tbx_Personal_FTel" Margin="0 0 10 0"
                             HorizontalAlignment="Left" Width="100" />
                            <TextBox Name="tbx_Personal_Mobil" Margin="0 0 10 0"
                             HorizontalAlignment="Left" Width="100" />
                        </StackPanel>
                        
                        <TextBox Name="tbx_Personal_EMail" Margin="0 15 10 0"
                             HorizontalAlignment="Left" Width="200" />
                        <!-- Stackpanel: Blz/ Bank -->
                        <StackPanel Orientation="Horizontal" Margin="0 15 10 0">
                            <TextBox Name="tbx_Personal_Blz" Margin="0 0 10 0"
                             HorizontalAlignment="Left" Width="100" />
                            <TextBox Name="tbx_Personal_Bank" Margin="0 0 10 0"
                             HorizontalAlignment="Left" Width="100" />
                        </StackPanel>

                        <TextBox Name="tbx_Personal_Konto" Margin="0 15 10 0"
                             HorizontalAlignment="Left" Width="200" />                
                        <TextBox Name="tbx_Personal_Ue" Margin="0 10 10 0"
                             HorizontalAlignment="Left" Width="50" />
                        <Syncfusion:ComboBoxAdv HorizontalAlignment="Left"
                             Name="cbx_Personal_Bildungstraeger" Width="200" Margin="0 15 0 10"   
                             Syncfusion:SkinStorage.VisualStyle="Metro" />
                        <Syncfusion:ComboBoxAdv HorizontalAlignment="Left"
                             Name="cbx_Personal_Abteilung" Width="200" Margin="0 5 0 10"   
                             Syncfusion:SkinStorage.VisualStyle="Metro" />
                        <Syncfusion:ComboBoxAdv HorizontalAlignment="Left"
                             Name="cbx_Personal_Team" Width="200" Margin="0 5 0 10"   
                             Syncfusion:SkinStorage.VisualStyle="Metro" />
                    </StackPanel>

                    <!-- Spalte 2 Labels -->
                    <StackPanel Grid.Column="2" Margin="10 10 0 0">
                        <Label Content="Ausbildung"/>
                        <Label Content="Studium" Margin="0 10 0 0"/>
                        <Label Content="Situation" Margin="0 10 0 0"/>
                        <Label Content="Einsatzgebiet" Margin="0 10 0 0"/>
                        <Label Content="Fachgebiet" Margin="0 105 0 0"/>
                        <Label Content="Themen" Margin="0 10 0 0"/>
                    </StackPanel>
                    
                    <!-- Spalte 3 Felder für Labels aus Spalte 2 -->
                    <StackPanel Grid.Column="3" Margin="10 10 0 0">
                        <TextBox Name="tbx_Personal_Ausbildung" Margin="0 5 0 0"
                             HorizontalAlignment="Left" Width="200" />
                        <TextBox Name="tbx_Personal_Studium" Margin="0 15 0 0"
                             HorizontalAlignment="Left" Width="200" />
                        <TextBox Name="tbx_Personal_Situation" Margin="0 15 0 0"
                             HorizontalAlignment="Left" Width="200" />
                        <ListBox Name="lbx_Einsatzgebiete" Height="115" Margin="0 15 0 0"/>
                        <TextBox Name="tbx_Personal_Fachgebiet" Margin="0 15 0 0"
                             HorizontalAlignment="Left" Width="200" />
                        <TreeView Name="tv_Themen" Width="200" Height="115" Margin="0 15 0 0"/>
                    </StackPanel>












                </Grid>
          
                   

            </Syncfusion:TabItemExt>
            <Syncfusion:TabItemExt  Header="Verträge" IsNewTab="False" MinWidth="150" MinHeight="20"/>
            <Syncfusion:TabItemExt  Header="Zahlungsanweisungen" IsNewTab="False" MinWidth="150" MinHeight="20">
            </Syncfusion:TabItemExt>
            <Syncfusion:TabItemExt  Header="Bewertung" IsNewTab="False" MinWidth="150" MinHeight="20"/>
            <Syncfusion:TabItemExt  Header="Info" IsNewTab="False" MinWidth="150" MinHeight="20"/>
            <Syncfusion:TabItemExt  Header="Statusprüfung" IsNewTab="False" MinWidth="150" MinHeight="20"/>
        </Syncfusion:TabControlExt>

    </Grid>
</UserControl>
