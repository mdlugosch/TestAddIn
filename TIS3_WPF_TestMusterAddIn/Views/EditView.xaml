                                    <CheckBox x:Name="chkbx_Info_Verfolgen" Margin="5 15 0 0" IsChecked="{Binding Honorarkraft_Status.hks_weiterverfolgung,  UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, Converter={StaticResource JNToBool}}">Weiterverfolgung ist erforderlich</CheckBox>
                                    <CheckBox x:Name="chkbx_Info_OffzVerfolgen" Margin="5 15 0 0" IsChecked="{Binding Honorarkraft_Status.hks_statusueberpruefung,  UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, Converter={StaticResource JNToBool}}">Offizielle Statusprüfung ist erforderlich</CheckBox>
                                    <CheckBox x:Name="chkbx_Info_Bedenklich" Margin="5 15 0 0" IsChecked="{Binding Honorarkraft_Status.hks_einsatz_bedenklich,  UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, Converter={StaticResource JNToBool}}">Einsatz als Honorarkraft bedenklich</CheckBox>
                                    <Label Content="Datum der letzten Überprüfung" Margin="0 5 0 0" />
                                </StackPanel>
                                <StackPanel Grid.Column="3"  Grid.Row="0" Margin="5 0 0 0">
                                    <DatePicker Name="dp_Info_Verfolgung" Margin="0 45 0 0" IsEnabled="{Binding ElementName=chkbx_Info_Verfolgen, Path=IsChecked, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                 Validation.ErrorTemplate="{x:Null}" HorizontalAlignment="Left" Width="200" Text="{Binding Honorarkraft_Status.hks_weiterverfolgung_datum, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                    <DatePicker Name="dp_Info_OffzVerfolgung" Margin="0 8 0 0" IsEnabled="{Binding ElementName=chkbx_Info_OffzVerfolgen, Path=IsChecked, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                 Validation.ErrorTemplate="{x:Null}" HorizontalAlignment="Left" Width="200" Text="{Binding Honorarkraft_Status.hks_statusueberpruefung_datum, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                    <DatePicker Name="dp_Info_DatumUederpruefung" Margin="0 30 0 0"
                                                 Validation.ErrorTemplate="{x:Null}" HorizontalAlignment="Left" Width="200" Text="{Binding Honorarkraft_Status.hks_letzte_ueberpruefung, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                </StackPanel>
                                <StackPanel Margin="5 0 0 0" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4">
                                    <Label Content="Info" Margin="0 5 0 0"/>
                                    <TextBox Name="rtbx_Status_Info" Margin="0 0 0 10" TextWrapping="Wrap"
                                         HorizontalAlignment="Left" Height="100"  Width="860" Text="{Binding Honorarkraft_Status.hks_bemerkungen}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Syncfusion:TabItemExt>
            </Syncfusion:TabControlExt>
        </Grid>
    </ScrollViewer>
</base:TIS3ActiveView>
