                                            <Syncfusion:GridTextColumn AllowSorting="True" MappingName="Test" HeaderText="Kst."/>
                                            <Syncfusion:GridTextColumn AllowSorting="True" MappingName="Test" HeaderText="Auftrag"/>
                                            <Syncfusion:GridTextColumn AllowSorting="True" MappingName="Test" HeaderText="Thema"/>
                                            <Syncfusion:GridTextColumn AllowSorting="True" MappingName="Test" HeaderText="Zeitraum"/>
                                            <Syncfusion:GridTextColumn AllowSorting="True" MappingName="Test" HeaderText="UE"/>
                                        </Syncfusion:SfDataGrid.Columns>
                                    </Syncfusion:SfDataGrid>
                                    <StackPanel Grid.Column="1" Grid.Row="1" Margin="10">
                                        <Button x:Name="btn_Zahlung_Neu" Content="Neu" Width="100"/>
                                        <Button x:Name="btn_Zahlung_Aendern" Content="Ändern" Width="100"/>
