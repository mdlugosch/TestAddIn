<base:TIS3ActiveView
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:base="clr-namespace:TIS3_Base;assembly=TIS3_Base"
             xmlns:Syncfusion="http://schemas.syncfusion.com/wpf" x:Class="TIS3_WPF_TestMusterAddIn.Views.EditView" 
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1500">

    <base:TIS3ActiveView.Resources>
        <Style x:Key="CheckBoxListBoxEinsatzgebiete" TargetType="{x:Type ListBox}">
            <Setter Property="ItemContainerStyle"
            Value="{DynamicResource CheckBoxListBoxItemEinsatzgebiete}" />
        </Style>
        <Style x:Key="CheckBoxListBoxItemEinsatzgebiete" TargetType="{x:Type ListBoxItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                        <CheckBox IsChecked="{Binding IsChecked}" Content="{Binding Einsatzgebiet.khke_bezeichnung}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </base:TIS3ActiveView.Resources>
    
    <ScrollViewer HorizontalScrollBarVisibility="Auto">
    <Grid>
            <Grid.Resources>
                <HierarchicalDataTemplate x:Key="Child_template">
                    <CheckBox IsChecked="{Binding IsChecked}">
                        <TextBlock Text="{Binding Thema.khkth_bezeichnung}"/>
                    </CheckBox>
                </HierarchicalDataTemplate>

                <HierarchicalDataTemplate x:Key="Parent_template"  ItemsSource="{Binding ThemeGroup}" ItemTemplate="{StaticResource Child_template}">
                    <TextBlock Text="{Binding Gruppe}"/>
                </HierarchicalDataTemplate>
            </Grid.Resources>
        
            <Syncfusion:TabControlExt HorizontalAlignment="Left" VerticalAlignment="Top">
                <Syncfusion:TabItemExt  Header="Personaldaten" IsNewTab="False" MinWidth="150" MinHeight="20">
                    <StackPanel>
                        <!-- Menuzeile Personaldaten -->
                        <Menu IsMainMenu="True">
                            <MenuItem Name="mnu_Personal_Speichern" Header="_Speichern"  />
                            <Separator />
                            <MenuItem Name="mnu_Personal_Reset" Header="_Reset" />
                        </Menu>
                        <Label Content="Personaldaten" />
                        <Border BorderBrush="Black" Margin="0 0 0 0" BorderThickness="1">
                            <!-- Personaldaten Haupt-Grid-Aufteilung -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>
                                <!-- Spalte 0 Labels -->
                                <StackPanel Grid.Column="0" Margin="10 10 0 0">
                                    <Label Content="Anrede / Titel" />
                                    <Label Content="Vorname" Margin="0 10 0 0"/>
                                    <Label Content="Nachname" Margin="0 10 0 0"/>
                                    <Label Content="Firma" Height="50" Margin="0 10 0 0"/>
                                    <Label Content="Strasse" Margin="0 10 0 0"/>
                                    <Label Content="PLZ / Ort" Margin="0 10 0 0"/>
                                    <Label Content="Telefon/ Fax" Margin="0 10 0 0"/>
                                    <Label Content="Tel. Firma /Mobil" Margin="0 10 0 0"/>
                                    <Label Content="EMail" Margin="0 10 0 0"/>
                                    <Label Content="BLZ / Bank" Margin="0 10 0 0"/>
                                    <Label Content="Konto" Margin="0 10 0 0"/>
                                    <Label Content="Honorar je UE" Margin="0 10 0 0"/>
                                    <Label Content="Bildungsträger" Margin="0 10 0 0"/>
                                    <Label Content="Abteilung" Margin="0 10 0 0"/>
                                    <Label Content="Team" Margin="0 10 0 0"/>
                                </StackPanel>
                                <!-- Spalte 1 Felder für Labels aus Spalte 0 -->
                                <StackPanel Grid.Column="1" Margin="10 10 10 0">
                                    <!-- Stackpanel: Anrede/ Titel -->
                                    <StackPanel Orientation="Horizontal">
                                        <Syncfusion:ComboBoxAdv ItemsSource="{Binding Cbx_Personal_Anrede}"
                                Name="cbx_Personal_Anrede" Width="100" Margin="0 5 0 10"   
                                Syncfusion:SkinStorage.VisualStyle="Metro" />
                                        <Syncfusion:ComboBoxAdv ItemsSource="{Binding Cbx_Personal_Titel}"
                                Name="cbx_Personal_Titel" Width="100" Margin="10 5 0 10"   
                                Syncfusion:SkinStorage.VisualStyle="Metro" />
                                    </StackPanel>
                                    <TextBox Name="tbx_Personal_Vorname" Margin="0 5 0 0"
                             HorizontalAlignment="Left" Width="210" Text="{Binding Tbx_Personal_Vorname}"/>
                                    <TextBox Name="tbx_Personal_Nachname" Margin="0 15 0 0"
                             HorizontalAlignment="Left" Width="210" Text="{Binding Tbx_Personal_Nachname}"/>
                                    <TextBox Name="tbx_Personal_Firma" Margin="0 15 0 0"
                             HorizontalAlignment="Left" Height="50"  Width="210" Text="{Binding Tbx_Personal_Firma}"/>
                                    <TextBox Name="tbx_Personal_Strasse" Margin="0 10 0 0"
                             HorizontalAlignment="Left" Width="210" />
                                    <!-- Stackpanel: Plz / Ort -->
                                    <StackPanel Orientation="Horizontal" Margin="0 10 10 0">
                                        <TextBox Name="tbx_Personal_Plz" Margin="0 0 10 0"
                             HorizontalAlignment="Left" Width="50" />
                                        <TextBox Name="tbx_Personal_Ort" Margin="0 0 10 0"
                             HorizontalAlignment="Left" Width="150" />
                                    </StackPanel>
                                    <!-- Stackpanel: Privattelefon/ Fax -->
                                    <StackPanel Orientation="Horizontal" Margin="0 15 10 0">
                                        <TextBox Name="tbx_Personal_PTel" Margin="0 0 10 0"
                             HorizontalAlignment="Left" Width="100" />
                                        <TextBox Name="tbx_Personal_Fax" Margin="0 0 10 0"
                             HorizontalAlignment="Left" Width="100" />
                                    </StackPanel>
                                    <!-- Stackpanel: Firmentelefon / Mobiltelefon -->
                                    <StackPanel Orientation="Horizontal" Margin="0 15 10 0">
                                        <TextBox Name="tbx_Personal_FTel" Margin="0 0 10 0"
                             HorizontalAlignment="Left" Width="100" />
                                        <TextBox Name="tbx_Personal_Mobil" Margin="0 0 10 0"
                             HorizontalAlignment="Left" Width="100" />
                                    </StackPanel>

                                    <TextBox Name="tbx_Personal_EMail" Margin="0 15 10 0"
                             HorizontalAlignment="Left" Width="210" />
                                    <!-- Stackpanel: Blz/ Bank -->
                                    <StackPanel Orientation="Horizontal" Margin="0 15 10 0">
                                        <TextBox Name="tbx_Personal_Blz" Margin="0 0 10 0"
                             HorizontalAlignment="Left" Width="100" />
                                        <TextBox Name="tbx_Personal_Bank" Margin="0 0 10 0"
                             HorizontalAlignment="Left" Width="100" />
                                    </StackPanel>
                                    <TextBox Name="tbx_Personal_Konto" Margin="0 15 10 0"
                             HorizontalAlignment="Left" Width="210" />
                                    <TextBox Name="tbx_Personal_Ue" Margin="0 10 10 0"
                             HorizontalAlignment="Left" Width="50" />
                                    <Syncfusion:ComboBoxAdv HorizontalAlignment="Left"
                             Name="cbx_Personal_Bildungstraeger" Width="200" Margin="0 15 0 10" DisplayMemberPath="Name1"   
                             Syncfusion:SkinStorage.VisualStyle="Metro" ItemsSource="{Binding Cbx_Personal_Bildungstraeger}" SelectedIndex="{Binding SelectedItem_Personal_Bildungstraeger, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    <Syncfusion:ComboBoxAdv HorizontalAlignment="Left"
                             Name="cbx_Personal_Abteilung" Width="200" Margin="0 5 0 10" DisplayMemberPath="Bezeichnung"   
                             Syncfusion:SkinStorage.VisualStyle="Metro" ItemsSource="{Binding Cbx_Personal_Abteilung}" SelectedIndex="{Binding SelectedItem_Personal_Abteilung, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    <Syncfusion:ComboBoxAdv HorizontalAlignment="Left"
                             Name="cbx_Personal_Teams" Width="200" Margin="0 5 0 10" DisplayMemberPath="Bezeichnung" 
                             Syncfusion:SkinStorage.VisualStyle="Metro" ItemsSource="{Binding Cbx_Personal_Teams}" SelectedIndex="{Binding SelectedItem_Personal_Team, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                                <!-- Spalte 2 Labels -->
                                <StackPanel Grid.Column="2" Margin="10 10 0 0">
                                    <Label Content="Ausbildung"/>
                                    <Label Content="Studium" Margin="0 10 0 0"/>
                                    <Label Content="Situation" Margin="0 10 0 0"/>
                                    <Label Content="Einsatzgebiet" Margin="0 10 0 0"/>
                                    <Label Content="Fachgebiet" Margin="0 105 0 0"/>
                                    <Label Content="Themen" Margin="0 10 0 0"/>
                                </StackPanel>
                                <!-- Spalte 3 Felder für Labels aus Spalte 2 -->
                                <StackPanel Grid.Column="3" Margin="10 10 0 0">
                                    <TextBox Name="tbx_Personal_Ausbildung" Margin="0 5 0 0"
                             HorizontalAlignment="Left" Width="200" />
                                    <TextBox Name="tbx_Personal_Studium" Margin="0 15 0 0"
                             HorizontalAlignment="Left" Width="200" />
                                    <TextBox Name="tbx_Personal_Situation" Margin="0 15 0 0"
                             HorizontalAlignment="Left" Width="200" />
                                    <ListBox Name="lbx_Einsatzgebiete" Height="115" Margin="0 15 0 0" ItemsSource="{Binding Lbx_Einsatzgebiete}" Style="{StaticResource CheckBoxListBoxEinsatzgebiete}"/>
                                    <TextBox Name="tbx_Personal_Fachgebiet" Margin="0 15 0 0"
                             HorizontalAlignment="Left" Width="200" />
                                    <TreeView Name="tv_Themen" ItemTemplate="{StaticResource Parent_template}" ItemsSource="{Binding Tv_Themen}" Width="250" Height="270" Margin="0 15 0 0"/> 
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Syncfusion:TabItemExt>

                <!-- Tab-Verträge -->
                <Syncfusion:TabItemExt  Header="Verträge" IsNewTab="False" MinWidth="150" MinHeight="20">
                    <StackPanel>
                        <!-- Menuzeile Vertragsdaten -->
                        <Menu IsMainMenu="True">
                            <MenuItem Name="mnu_Vertrag_Speichern" Header="_Speichern"  />
                            <Separator />
                            <MenuItem Name="mnu_Vertrag_Reset" Header="_Reset" />
                        </Menu>
                        <Label Content="Verträge" />
                        <!-- Verträge Haupt-Grid-Aufteilung -->
                        <Border BorderBrush="Black" BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition  Width="auto"/>
                                    <ColumnDefinition  Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <!-- Verträge Spalte 0 -->
                                <Syncfusion:SfDataGrid x:Name="dg_Vertraege" Grid.Column="0" AutoGenerateColumns="False" AllowResizingColumns="True" ItemsSource="{Binding HonorarListe2}"
                                   AllowSorting="True" AddNewRowPosition ="None" SelectionUnit="Row" SelectionMode="Extended" ColumnSizer="None" AllowEditing="False"
                                   IsDynamicItemsSource="False" Focusable="True" EditTrigger="OnTap" AllowGrouping="False" Margin="10 10 0 10"
                                   SelectedItem="{Binding SelectedHonorar, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                 
                                    <Syncfusion:SfDataGrid.Columns>
                                        <Syncfusion:GridTextColumn AllowSorting="True" MappingName="Test" HeaderText="Zeile"/>
                                        <Syncfusion:GridTextColumn AllowSorting="True" MappingName="Test" HeaderText="Nr."/>
                                        <Syncfusion:GridTextColumn AllowSorting="True" MappingName="Test" HeaderText="Abteilung"/>
                                        <Syncfusion:GridTextColumn AllowSorting="True" MappingName="Test" HeaderText="Datum"/>
                                        <Syncfusion:GridTextColumn AllowSorting="True" MappingName="Test" HeaderText="gedruckt"/>
                                        <Syncfusion:GridTextColumn AllowSorting="True" MappingName="Test" HeaderText="Unterschrift"/>
                                        <Syncfusion:GridTextColumn AllowSorting="True" MappingName="Test" HeaderText="geändert"/>
                                        <Syncfusion:GridTextColumn AllowSorting="True" MappingName="Test" HeaderText="Summe"/>
                                    </Syncfusion:SfDataGrid.Columns>
                                </Syncfusion:SfDataGrid>
                                <StackPanel Grid.Column="1" Margin="10">
                                    <Button x:Name="btn_Vertraege_Neu" Content="Neu" Width="100"/>
                                    <Button x:Name="btn_Vertraege_Löschen" Content="Löschen" Width="100" />
                                </StackPanel>
                            </Grid>
                        </Border>
                        <!-- Verträge Spalte 1 -->
                        <Label Content="Vertrag" />
                        <Border BorderBrush="Black" BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition  Width="auto"/>
                                    <ColumnDefinition  Width="auto"/>
                                    <ColumnDefinition  Width="auto"/>
                                    <ColumnDefinition  Width="auto"/>
                                    <ColumnDefinition  Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <!-- Vertrag Spalte 0 -->
                                <StackPanel Grid.Column="0">
                                    <Label Content="Nr." Margin="0 5 0 0"/>
                                    <Label Content="Abteilung" Margin="0 5 0 0"/>
                                    <Label Content="Vertrags-Datum" Margin="0 5 0 0"/>
                                    <Label Content="Druckdatum" Margin="0 5 0 0"/>
                                    <Label Content="Unterschriftendatum" Margin="0 5 0 0"/>
                                </StackPanel>
                                <!-- Vertrag Spalte 1 -->
                                <StackPanel Grid.Column="1" Margin="5 0 0 0">
                                    <TextBox Name="tbx_Vertrag_Nummer" Margin="0 10 0 0"
                                HorizontalAlignment="Left" Width="200" />
                                    <Syncfusion:ComboBoxAdv DisplayMemberPath="Bezeichnung"
                                Name="cbx_Vertrag_Abteilung" Width="200" Margin="0 10 0 0" Height="22" 
                                Syncfusion:SkinStorage.VisualStyle="Metro" HorizontalAlignment="Left" ItemsSource="{Binding Cbx_Vertrag_Abteilung}" SelectedIndex="{Binding SelectedItem_Vertrag_Abteilung, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    <TextBox Name="tbx_Vertrag_Datum" Margin="0 10 0 0"
                                HorizontalAlignment="Left" Width="200" />
                                    <TextBox Name="tbx_Vertrag_Druckdatum" Margin="0 10 0 0"
                                HorizontalAlignment="Left" Width="200" />
                                    <TextBox Name="tbx_Vertrag_Unterschriftdatum" Margin="0 10 0 0"
                                HorizontalAlignment="Left" Width="200" />
                                    <Button x:Name="btn_Vertrag_Reset" Content="Reset" Width="100" Margin="0 10 0 10"/>
                                </StackPanel>
                                <!-- Vertrag Spalte 2 -->
                                <StackPanel Grid.Column="2"  Margin="5 0 0 0">
                                    <Label Content="Aussteller" Margin="0 10 0 0"/>
                                    <Label Content="Bildungsträger" Margin="0 10 0 0"/>
                                </StackPanel>
                                <!-- Vertrag Spalte 3 -->
                                <StackPanel Grid.Column="3"  Margin="5 0 0 0">
                                    <Syncfusion:ComboBoxAdv
                                Name="cbx_Vertrag_Aussteller" Width="200" Margin="0 15 0 0" Height="22" 
                                Syncfusion:SkinStorage.VisualStyle="Metro" HorizontalAlignment="Left"/>
                                    <Syncfusion:ComboBoxAdv DisplayMemberPath="Name1"
                                Name="cbx_Vertrag_Bildungstraeger" Width="200" Margin="0 15 0 0" Height="22" 
                                Syncfusion:SkinStorage.VisualStyle="Metro" HorizontalAlignment="Left" ItemsSource="{Binding Cbx_Vertrag_Bildungstraeger}" SelectedIndex="{Binding SelectedItem_Vertrag_Bildungstraeger, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    <CheckBox x:Name="chkbx_Vertrag_400" Margin="0 10 0 0">Vertrag auf 400 € Basis</CheckBox>
                                    <CheckBox x:Name="chkbx_Vertrag_AZWV" Margin="0 10 0 0">
                                        <TextBlock>
                                    Es handelt sich um einen Auftrag<LineBreak/>
                                    in AZWV-zertifizierten Kursen     
                                    (Umsatzsteuerbefreiung)
                                        </TextBlock>
                                    </CheckBox>
                                    <CheckBox x:Name="chkbx_Vertrag_Vermittlungsagentur" Margin="0 10 0 0">Vermittlungsagentur</CheckBox>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <!-- Bereich Position -->
                        <Label Content="Positionen" />
                        <Border BorderBrush="Black" BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition  Width="auto"/>
                                    <ColumnDefinition  Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <Syncfusion:SfDataGrid x:Name="dg_Vertrag_Positionen" Grid.Column="0" AutoGenerateColumns="False" AllowResizingColumns="True" ItemsSource="{Binding HonorarListe2}"
                                   AllowSorting="True" AddNewRowPosition ="None" SelectionUnit="Row" SelectionMode="Extended" ColumnSizer="None" AllowEditing="False"
                                   IsDynamicItemsSource="False" Focusable="True" EditTrigger="OnTap" AllowGrouping="False"  Margin="10 10 0 10" 
                                   SelectedItem="{Binding SelectedHonorar, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                          
                                    <Syncfusion:SfDataGrid.Columns>
                                        <Syncfusion:GridTextColumn AllowSorting="True" MappingName="Test" HeaderText="Zeile"/>
                                        <Syncfusion:GridTextColumn AllowSorting="True" MappingName="Test" HeaderText="Kst."/>
                                        <Syncfusion:GridTextColumn AllowSorting="True" MappingName="Test" HeaderText="Auftrag"/>
                                        <Syncfusion:GridTextColumn AllowSorting="True" MappingName="Test" HeaderText="Thema"/>
                                        <Syncfusion:GridTextColumn AllowSorting="True" MappingName="Test" HeaderText="Zeitraum"/>
                                        <Syncfusion:GridTextColumn AllowSorting="True" MappingName="Test" HeaderText="UE"/>
                                        <Syncfusion:GridTextColumn AllowSorting="True" MappingName="Test" HeaderText="Honorar"/>
                                        <Syncfusion:GridTextColumn AllowSorting="True" MappingName="Test" HeaderText="Summe"/>
                                        <Syncfusion:GridTextColumn AllowSorting="True" MappingName="Test" HeaderText="Provision"/>
                                    </Syncfusion:SfDataGrid.Columns>
                                </Syncfusion:SfDataGrid>
                                <StackPanel Grid.Column="1" Margin="10">
                                    <Button x:Name="btn_Vertrag_Neu" Content="Neu" Width="100"/>
                                    <Button x:Name="btn_Vertrag_Aendern" Content="Ändern" Width="100"/>
                                    <Button x:Name="btn_Vertrag_Löschen" Content="Löschen" Width="100" />
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Syncfusion:TabItemExt>

                <!-- Tab: Zahlungsanweisungen -->
                <Syncfusion:TabItemExt  Header="Zahlungsanweisungen" IsNewTab="False" MinWidth="150" MinHeight="20">
                    <StackPanel>
                        <!-- Menuzeile Zahlungsanweisungen -->
                        <Menu IsMainMenu="True">
                            <MenuItem Name="mnu_Zahlung_Speichern" Header="_Speichern"  />
                            <Separator />
                            <MenuItem Name="mnu_Zahlung_Reset" Header="_Reset" />
                        </Menu>
                        <Label Content="Zahlungsanweisungen" />
                        <Border BorderBrush="Black" BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition  Width="auto"/>
                                    <ColumnDefinition  Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <Syncfusion:SfDataGrid x:Name="dg_Zahlungsanweisungen" Grid.Column="0" AutoGenerateColumns="False" AllowResizingColumns="True" ItemsSource="{Binding HonorarListe2}"
                                   AllowSorting="True" AddNewRowPosition ="None" SelectionUnit="Row" SelectionMode="Extended" ColumnSizer="None" AllowEditing="False"
                                   IsDynamicItemsSource="False" Focusable="True" EditTrigger="OnTap" AllowGrouping="False"  Margin="10 10 0 10" 
                                   SelectedItem="{Binding SelectedHonorar, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    
                                    <Syncfusion:SfDataGrid.Columns>
                                        <Syncfusion:GridTextColumn AllowSorting="True" MappingName="Test" HeaderText="Zeile"/>
                                        <Syncfusion:GridTextColumn AllowSorting="True" MappingName="Test" HeaderText="Nr."/>
                                        <Syncfusion:GridTextColumn AllowSorting="True" MappingName="Test" HeaderText="Abteilung"/>
                                        <Syncfusion:GridTextColumn AllowSorting="True" MappingName="Test" HeaderText="Monat"/>
                                        <Syncfusion:GridTextColumn AllowSorting="True" MappingName="Test" HeaderText="gedruckt"/>
                                        <Syncfusion:GridTextColumn AllowSorting="True" MappingName="Test" HeaderText="Änderung"/>
                                        <Syncfusion:GridTextColumn AllowSorting="True" MappingName="Test" HeaderText="Summe"/>
                                    </Syncfusion:SfDataGrid.Columns>
                                </Syncfusion:SfDataGrid>
                                <StackPanel Grid.Column="1" Margin="10">
                                    <Button x:Name="btn_Zahlungen_Neu" Content="Neu" Width="100"/>
                                    <Button x:Name="btn_Zahlungen_Löschen" Content="Löschen" Width="100" />
                                </StackPanel>
                            </Grid>
                        </Border>
                        <!-- Anzeigebereich der einzelnen Zahlungsanweisungen -->
                        <Label Content="Zahlungsanweisung" />
                        <Border BorderBrush="Black" BorderThickness="1">
                            <StackPanel>
                                <!-- Stackpanel-Kapselung für Randdarstellung -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Column="0" Grid.Row="0">
                                        <Label Content="Nr." Margin="0 5 0 0"/>
                                        <Label Content="Monat" Margin="0 5 0 0"/>
                                        <Label Content="Druckdatum" Margin="0 5 0 0"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Grid.Row="0">
                                        <TextBox Name="tbx_Zahlung_Nummer" Margin="0 10 0 0"
                                HorizontalAlignment="Left" Width="200" />
                                        <TextBox Name="tbx_Zahlung_Monat" Margin="0 10 0 0"
                                HorizontalAlignment="Left" Width="200" />
                                        <TextBox Name="tbx_Zahlung_Druckdatum" Margin="0 10 0 10"
                                HorizontalAlignment="Left" Width="200" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="2" Grid.Row="0">
                                        <Label Content="Bildungsträger" Margin="0 5 0 0"/>
                                        <Label Content="Abteilung" Margin="0 5 0 0"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="3" Grid.Row="0">
                                        <Syncfusion:ComboBoxAdv DisplayMemberPath="Name1"
                                Name="cbx_Zahlung_Bildungstraeger" Width="200" Margin="0 10 0 0" Height="22" 
